@{
    ViewBag.Title = "Registro de Cuenta";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4 text-primary">Crea tu cuenta en Ternura Infinita</h2>

    <div class="card shadow p-4">
        <h4 class="text-center mb-3">Formulario de Registro</h4>
        @using (Html.BeginForm("Register", "Cuenta", FormMethod.Post))
        {
            <div class="form-group mb-3">
                <label for="CLI_CEDULA">Cédula</label>
                <input type="text" name="CLI_CEDULA" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="CLI_NOMBRE">Nombre completo</label>
                <input type="text" name="CLI_NOMBRE" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="CLI_TELEFONO">Teléfono</label>
                <input type="tel" name="CLI_TELEFONO" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="CLI_CORREO">Correo electrónico</label>
                <input type="email" name="CLI_CORREO" class="form-control" required />
            </div>

            <div class="form-group mb-4">
                <label for="CLI_DIRECCION">Dirección</label>
                <textarea name="CLI_DIRECCION" class="form-control" rows="2" required></textarea>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Registrarse</button>
            </div>
        }
        <hr class="my-4" />
        <p class="text-center">¿Ya tienes cuenta?</p>
        <div class="d-grid gap-2">
            <a href="@Url.Action("Login", "Cuenta")" class="btn btn-outline-secondary">Iniciar Sesión</a>
        </div>
    </div>
</div>

<style>
    h2, h4 {
        font-weight: bold;
        color: #e91e63;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-primary {
        background-color: #e91e63;
        border-color: #e91e63;
    }

        .btn-primary:hover {
            background-color: #d81b60;
            border-color: #d81b60;
        }
</style>
